std::string Ausnahmen::Ausnahmen_string(const std::string& name, 
               const std::string& alt,const std::string& alt2)
{
 for (std::vector<cH_Data_Ausnahmen>::const_iterator i=vec_Ausnahmen.begin();
         i!=vec_Ausnahmen.end();++i)
   if ((*i)->Name()==name) return (*i)->Standard();
  return alt+" "+alt2;
}
