void Window_Waffenbesitz::on_waffe_alt_select(std::string waffe,std::string bonus)
{   
  for (std::vector<H_Data_waffen>::iterator i=Waffe_Besitz.begin();
         i!=Waffe_Besitz.end();++i)
   { 
     if ((*i)->Alias()==waffe && !mag_bonus_bool) 
         { Waffe_Besitz.erase(i);break;}
     std::string bonus_= "("+itos((*i)->av_Bonus())+"/"+itos((*i)->sl_Bonus())+")";
     if (bonus_=="(0/0)") bonus_="";
     if ((*i)->Alias()==waffe && mag_bonus_bool && bonus_==bonus) 
         {manage (new Window_mag_bonus(this,*i));break;} 
   }
  hauptfenster->on_speichern_clicked();
  show_alte_waffen();   
  show_neue_waffen();   
}

