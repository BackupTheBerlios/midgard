AC_SUBST(LDFLAGS)

AC_HEADER_STDC

PKG_CHECK_MODULES(GTKMM,[gtkmm-2.0 >= 1.3.20])

AC_CONFIG_SUBDIRS( searchcombo )
AM_CONDITIONAL(INSTALL_WIDGET, false )

AC_OUTPUT(Makefile src/Makefile tests/Makefile tests/close_window/Makefile)
