AC_INIT(src/Gtk_OStream.h)
AM_INIT_AUTOMAKE(GtkmmAddons, 1.3.0)
AM_CONFIG_HEADER(config.h)

#INCLUDES=-I/home/share/safeSTL

AC_PREFIX_DEFAULT(/usr/local)

AC_PROG_CC
AC_PROG_CXX
AM_PROG_LIBTOOL
AC_LANG_CPLUSPLUS

AC_SUBST(CFLAGS)
