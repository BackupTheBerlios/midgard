      	order by spezies,herkunft,typ,beruf,stand;
      exec sql open cursor_ausn;
      while (!sqlca.sqlcode) 
      {  exec sql fetch from cursor_ausn into sql descriptor spalten;
         if (sqlca.sqlcode) break;
