int Grad_anstieg::get_Grad(int gfp) 
{
 map<int,st_grad>::const_reverse_iterator e=map_grad.rend();
 for(map<int,st_grad>::const_reverse_iterator i=map_grad.rbegin();i!=e;++i)
{ 
//cout<<gfp<<'\t'<< i->second.gfp<<'\t'<<i->first<<'\n';
   if( i->second.gfp <= gfp) 
      return i->first;
}
 assert(0);
}
