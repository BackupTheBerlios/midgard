DROP INDEX "kido_name_orig";
DROP TABLE "kido";
--
--
--

CREATE TABLE "kido" (
	"name_orig" text,
	"name" text,
	"stufe" text,
	"stil" text,
	"fp" integer,
	"ap" integer,
	"effekt" text
);

