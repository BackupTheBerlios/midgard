void Window_Waffenbesitz::mag_boni_uebernehmen(H_Data_waffen& wa)
{
  int count=0; 
  for (std::vector<H_Data_waffen>::iterator i=Waffe_Besitz.begin();
         i!=Waffe_Besitz.end();++i)
     if (count++ == memwaffe) (*i)=wa;
