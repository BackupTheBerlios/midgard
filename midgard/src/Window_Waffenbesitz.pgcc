}

void Window_Waffenbesitz::on_button_sort_clicked()
{
  std::deque<guint> seq = waffenbesitz_alt_tree->get_seq();
  std::vector<H_Data_waffen>::iterator IB=Waffe_Besitz.begin();  
  std::vector<H_Data_waffen>::iterator IE=Waffe_Besitz.end();  
  switch((Data_waffenbesitz::SPALTEN_A)seq[0]) {
      case Data_waffenbesitz::MAGBONUS : stable_sort(IB,IE,Data_waffen_sort_magbonus()); ;break;
      case Data_waffenbesitz::NAME_A   : stable_sort(IB,IE,Data_waffen_sort_name()); ;break;
      default : manage(new WindowInfo("Sortieren nach diesem Parameter\n ist nicht möglich"));
   }
}
