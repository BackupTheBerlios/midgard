   //***** preise ******
   {  exec sql begin declare section;
      float kosten;
      char einheit[30];
      exec sql end declare section;
      
      exec sql select kosten, einheit into :kosten, :einheit 
      	from preise where name=:WAFFE and art='Waffen';
      if (!sqlca.sqlcode)
      {  o << "    <Kaufpreis";
         write_int_attrib(o, "Preis", kosten);
         write_string_attrib(o, "Währung", einheit);
         o << "/>\n";
      }
   }   
   }
      
   o << "  </Waffe>\n";
  }
   exec sql close waffen_curs;
   SQLerror::test(__FILELINE__);
   o << " </Waffen>\n";

//******************waffen_grund************************************************

   o << " <Waffen:Grundkenntnisse>\n";
   o << "   <-- direkte Grundkenntnisse stehen bei den Waffen -->\n";
