      db_alter        = Werte.Alter();      
      db_gewicht      = Werte.Gewicht();      
      db_groesse      = Werte.Groesse();      
      db_grad         = Werte.Grad();      
      db_gfp = Werte.GFP() ;
      db_gold = Werte.Gold();
      db_silber = Werte.Silber();
      db_kupfer = Werte.Kupfer();
      db_aep = Werte.AEP();
      db_kep = Werte.KEP();
      db_zep = Werte.ZEP();
      db_steigern_bool = steigern_bool;
      db_steigern_EP = Grad_Anstieg.get_Steigern_EP_Prozent();
