      //********** Pflicht ****************
     {exec sql begin declare section;
      	 int LERNPKTE[40], ERFWERT[40];
         exec sql end declare section;
         
      exec sql select typ,coalesce(lernpunkte,0),coalesce(erfolgswert,0) 
      	into :TYPEN,:LERNPKTE,:ERFWERT from pflicht_lernen 
